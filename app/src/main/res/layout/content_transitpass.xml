<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tfs.mkaratusi.mkaratusi.activities.TransitpassActivity"
    tools:showIn="@layout/activity_transitpass">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="3dp"
        android:id="@id/text1"
        android:layout_centerHorizontal="true"
        android:text="Fill Transitpass Parclucers"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text1"
            android:background="#ff9703" />

        <EditText
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Source Name"
            android:id="@+id/input_source_forest" />
        <EditText
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destination Name"
            android:id="@+id/input_destination" />
        <EditText
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle No"
            android:id="@+id/input_vehicle_no" />

    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="7dp"
        android:background="#ff9703" />
    <LinearLayout
        android:id="@+id/linear2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hummer No"
            android:id="@+id/input_hummer_no" />
        <EditText
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hummer Maker"
            android:id="@+id/input_hummer_maker" />
    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="7dp"
        android:background="#ff9703" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@+id/view3"
        android:id="@+id/linear3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:inputType="number"
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="days to Expire "
            android:id="@+id/input_expire_days" />

        <EditText
            android:inputType="textAutoComplete"
            style="@style/edit_text_style"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint=" Addition information"
            android:id="@+id/input_addtion_information" />
    </LinearLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/linear3"
        android:layout_marginTop="7dp"
        android:background="#ff9703" />
</RelativeLayout>

</ScrollView>
